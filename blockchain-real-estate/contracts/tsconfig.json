{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "typechain-types/*": ["./typechain-types/*"]
    }
  },
  "include": [
    "./test",
    "./scripts",
    "./typechain-types"
  ],
  "files": ["./hardhat.config.ts"]
}
